<!-- views/partials/form-input.ejs -->
<div class="row">
  <div class="mb-3">
    <label for="<%= id %>" class="form-label">
      <%= label %>
    </label>
    <div class="custom-validation">
      <input
      type="<%= type %>"
      class="form-control"
      id="<%= id %>"
      name="<%= name %>"
      <% if (required) { %>required<% } %> />
    </div>
  </div>
</div>